<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.my.otpverification">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OTPVerification">
        <activity
            android:name=".LoginAccount"
            android:exported="false"
            android:label="Account Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".OtpSendActivity"
            android:exported="false"
            android:label="OTP Send"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CreateAccount"
            android:exported="false"
            android:label="Create new Account"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".OtpVerifyActivity"
            android:label="OTP Code"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".FingerPrintScanner"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Result"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>